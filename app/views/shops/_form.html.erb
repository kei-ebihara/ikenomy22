<%= form_with model: shop, local: true do |form| %>
  <%= render "shared/errors", obj: shop %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :new_image %>
    <%= form.file_field :new_image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :name , { include_blank: t(".include_blank") },  { class: "form-control" } %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, rows: 10, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.telephone_field :phone_number, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :address %>
    <%= form.text_area :address, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :homepage %>
    <%= form.url_field :homepage, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :business_hours %>
    <%= form.text_area :business_hours, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :holiday %>
    <%= form.text_area :holiday, class: "form-control" %>
  </div>
  <%= form.submit class: "btn btn-primary" %>
  <%= link_to t(".return"), :back, class: "btn btn-secondary" %>
<% end %>